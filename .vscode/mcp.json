{
  "servers": {
    "atlassian-mcp-server": {
      "url": "https://mcp.atlassian.com/v1/mcp",
      "type": "http"
    },
    "github-local": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:MRGE_GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "databricks": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@squadbase/mcp-databricks"],
      "env": {
        "DATABRICKS_HOST": "${env:HOST_NAME}",
        "DATABRICKS_TOKEN": "${env:DATABRICKS_TOKEN}"
      }
    }
  }
}
