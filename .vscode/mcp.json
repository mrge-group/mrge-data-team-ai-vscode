{
  "inputs": [
    {
      "id": "github-token",
      "type": "environmentVariable",
      "variableName": "MRGE_GITHUB_PERSONAL_ACCESS_TOKEN",
      "description": "GitHub Personal Access Token"
    }
  ],
  "servers": {
    "atlassian-mcp-server": {
      "url": "https://mcp.atlassian.com/v1/mcp",
      "type": "http"
    },
    "github-local": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "MRGE_GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github-token}"
      }
    },
    "databricks": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@squadbase/mcp-databricks"],
      "env": {
        "DATABRICKS_HOST": "${env:HOST_NAME}",
        "DATABRICKS_TOKEN": "${env:DATABRICKS_TOKEN}"
      }
    }
  }
}
